<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task)%>
    <%= link_to "Delete",
    task_path(task),
    data: {turbo_method: :delete, turbo_confirm: "Delete #{task.title}?"}
    %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new task", tasks_new_path %>
